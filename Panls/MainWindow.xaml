<Window MinHeight="700" MinWidth="800" x:Class="Panls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panls"
        mc:Ignorable="d"
        Title="Club Jummana" Height="950" Width="1800" WindowStartupLocation="CenterOwner">
    <Window.Background>
        <ImageBrush ImageSource="8 (2).jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.45*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="0.45*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="0" Grid.Row="1" FontSize="24" MinWidth=" 300" MinHeight="100"  Click="Button_Click"> Search</Button>
        <Button  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="3" Grid.Row="1" FontSize="24" MinWidth=" 300" MinHeight="100">ADD PRODUCT</Button>
    </Grid>

</Window>
